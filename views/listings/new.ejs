<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        
    <h3>Create a New Listings</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data"> <%//by defining enctype,we send files %>
        <div class="mb-3">
            <lable for="title" class="form-lable">Title</lable>
            <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
            <div class="valid-feedback">Title looks good!</div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-lable">Description</lable>
            <textarea name="listing[description]"   type="text" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter a short description!</div>
        </div>
        <div class="mb-3">
            <lable for="image" class="form-lable">Upload Listing Image</lable>
            <input name="listing[image]" type="file" class="form-control">
            required
        </div>

        <!-- <div class="mb-3">
            <lable for="image" class="form-lable">Image Link</lable>
            <input name="listing[image]" placeholder="enter image URL/link" type="text" class="form-control">

        </div> -->

        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-lable">Price</lable>
                <input name="listing[price]" placeholder="1200"   class="form-control" required>
                <div class="invalid-feedback">Price should be valid!</div> 
             </div>
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-lable">Country</lable>
                <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                <div class="invalid-feedback">Country should be valid!</div>
            </div>
        </div>
        
        <div class="mb-3">
            <lable for="location" class="form-lable">Location</lable>
            <input name="listing[location]" placeholder="Jaipur, Rajasthan" type="text" class="form-control" required>
            <div class="invalid-feedback">Location should be valid!</div>
        </div>

         
         <button class="btn btn-dark add-btn mt-3">Add</button>
          
    </form>
</div>
</div>
 